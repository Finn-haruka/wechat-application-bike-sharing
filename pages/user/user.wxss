/* 订单 */
.order {  
  display: flex;  
  flex-direction: row;  
  align-items: center;  
  width: 100%;  
  height: 90rpx;
}
.myorder-text {  
  font-size: 34rpx;  
  color: gray;  
  margin: 20rpx;  
  width: 40%;
}
.myorderlook-text {  
  font-size: 34rpx;  
  color: gray;  
  position: relative;  
  right: 20rpx;  
  width: 60%;  
  text-align: right;
}
.next-image {  
  width: 20rpx;  
  height: 25rpx;  
  position: relative;  
  right: 10rpx;
}
.navs {  
  display: flex;
}
.nav-item {  
  width: 25%;  
  display: flex;  
  align-items: center;  
  flex-direction: column;  
  padding: 20rpx;
}
.nav-item .nav-image {  
  width: 55rpx;  
  height: 55rpx;  
  margin: 5rpx;
}
.nav-item text {  
  margin-top: 20rpx;  
  font-size: 28rpx;  
  color: gray;
}
