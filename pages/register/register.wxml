<view class="container"> 
 
 <view class="login-icon" indicator-dots indicator-color="white" 
indicator-active-color="black" autoplay interval="5000" circular> 
 
 <view>
  <image class="login-img" src="/icon/xm.png"></image> 
 </view>

 </view> 
 <view class="login-from"> 
 
 <!--账号-->
 <view class="inputView"> 
  <image class="nameImage" src="/icon/用户.png"></image> 
  <label class="loginLab">账号</label> 
  <input class="inputText" placeholder="请输入用户名" bindinput="input_name" /> 
 </view> 
 <view class="line"></view> 
 
 <!--密码-->
 <view class="inputView"> 
  <image class="keyImage" src="/icon/密码.png"></image> 
  <label class="loginLab">密码</label> 
  <input class="inputText" password="true" placeholder="请输入密码" bindinput="input_pwd" /> 
 </view> 

 <view class="inputView" style="margin-top: 7px;"> 
  <image class="keyImage" src="/icon/密码2.png"></image> 
  <label class="loginLab">确认密码</label> 
  <input class="inputText" password="true" placeholder="请再次输入密码" bindinput="input_confirmpwd" /> 
 </view> 
 
 <!--按钮-->
 <view class="loginBtnView"> 
  <button class="loginBtn" type="primary" size="{{primarySize}}" loading="{{loading}}" plain="{{plain}}" disabled="{{disabled}}" bindtap="submitButton">注册</button> 
  <!-- <button class="RegisterBtn" type="primary" bindtap="submitButton">注册</button>  -->
 </view> 
 </view> 
</view>